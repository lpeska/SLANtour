        <div class="row">
            <aside class="col-lg-3">
                <div class="custom-search-input-2 inner-2">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Kamkoliv" id="autocomplete">
                        <i class="icon_pin_alt"></i>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="dates" placeholder="Kdykoliv">
                        <i class="icon_calendar"></i>
                    </div>
                    
                    <div class="form-group">
                        <select class="wide" aria-label="Select tour date">
                            <option value="" selected>Všechny typy zájezdů</option>
                            {% for tourType in types %}
                            <option value="{{loop.index}}">{{tourType.name}}</option>
                            
                            {% endfor %} 
