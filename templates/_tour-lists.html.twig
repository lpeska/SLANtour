{% if popularTours|length > 0 %}
<section class="add_bottom_45">
    <div class="main_title_3">
        <span><em></em></span>
        <h2>Nejprodávanější zájezdy</h2>
        <p>To nejlepší z naší nabídky.</p>
    </div>
    <div class="row">
        {% for tour in popularTours %}
        <div class="col-xl-3 col-lg-6 col-md-6">
            <a href="/zajezdy/zobrazit/{{tour.escapedName}}/{{tour.id_zajezd}}" class="grid_item">
                <figure>
                    <div class="price">
                        od {{tour.price}} Kč
                    </div>

                    {% if tour.priceDiscount > 0 %}
                    <div class="price_discount">{{tour.priceOriginal}} Kč</div>
                    <div class="price_discount_tag">
                        -{{tour.priceDiscount}}%
                    </div>

                    {% endif %}

                    <img src="{{ tour.image }}" class="img-fluid" alt="">
                    <div class="info">
                        <h3>{{tour.name}}</h3>
                        <em>
                            {% if tour.nights > 4 %}
                            {{tour.nights + 1}} dní, 
                            {% elseif tour.nights > 1 %}
                            {{tour.nights + 1}} dny, 
                            {% elseif tour.nights > 0 %}
                            {{tour.nights + 1}} den, 
                            {% endif %}
                            {{tour.meals}}</em>
                    </div>
                    <div class="info-right">
                        <em>{{tour.destination}}</em>
                    </div>
                </figure>
            </a>
        </div>
        <!-- /grid_item -->
        {% endfor %}
    </div>
    <!-- /row -->
    {% if (type.id > 0) %}
        <a href="/vyhledat-zajezd.php?tourTypeFilter[]={{ type.id }}"><strong>Zobrazit další zájezdy ({{totalTours}}) <i class="arrow_carrot-right"></i></strong></a>
    {% endif %}
    
    {% if (destination.id > 0) %}
        <a href="/vyhledat-zajezd.php?countryFilter[]={{ destination.id }}"><strong>Zobrazit další zájezdy ({{totalTours}}) <i class="arrow_carrot-right"></i></strong></a>
    {% endif %}   
    
    {% if (type.id is not defined and destination.id is not defined) %}
        <a href="/vyhledat-zajezd.php"><strong>Zobrazit další zájezdy ({{totalTours}}) <i class="arrow_carrot-right"></i></strong></a>
    {% endif %}

</section>
{% endif %}
<!-- /section -->

