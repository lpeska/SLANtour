{% extends "_base.html.twig" %}

{% block meta %}
<meta name="description" content="SLANtour - nabídka zájezdů do evropských a světových zemí. Vyberte si z široké nabídky poznávacích, sportovních a relaxačních zájezdů.">
<meta name="keywords" content="zájezdy, dovolená, evropské země, světové země, sportovní zájezdy, poznávací zájezdy, relaxační zájezdy">
{% endblock meta %}

{% block title %}SLANtour | 
	{% if continentName == "evropa" %}
		Evropské země - zájezdy a pobyty
    {% elseif continentName == "svet" %}
        Svět - zájezdy a pobyty
    {% elseif continentName == "sport" %}
        Sportovní zájezdy a pobyty
	{% elseif continentName == "zeme-seznam" %}
		Nabízené země - zájezdy a pobyty
    {% endif %}

{% endblock title %}

{% block stylesheets %}

{% endblock stylesheets %}

{% block main %}


<section class="hero_in tour_list">
    <img src="../img/dovolena.jpg" alt="Slide background">
    <div class="wrapper">
        <div class="container">
            <h1 class="fadeInUp"><span></span>
				{% if continentName == "evropa" %}
					Evropské země
                {% elseif continentName == "svet" %}
                    Svět
                {% elseif continentName == "sport" %}
                    Sporty
				{% elseif continentName == "zeme-seznam" %}
					Země
                {% endif %}
			</h1>
        </div>
    </div>
</section>
<!--/hero_in-->

<div class="bg_color_1">

    {% include "_breadcrumbs.html.twig" %}

    <div class="container margin_35_35">
        <div class="row">
			{% for country in countries %}
			<div class="col-xl-3 col-lg-6 col-md-6">
				<a href="{{ country.url }}" class="grid_item">
					<figure>
						<img src="{{ country.image }}" class="img-fluid" alt="">
						<div class="info">
							<h3>{{country.name}}</h3>
							{{country.numberOfTours}} 
							{% if country.numberOfTours > 4 %}
							zájezdů 
							{% elseif country.numberOfTours > 1 %}	
							zájezdy
							{% else %}
							zájezd
							{% endif %}
							
							od {{country.priceFrom}} Kč
						</div>
					</figure>
				</a>
			</div>
			<!-- /grid_item -->
			{% endfor %}
		</div>
    </div>
    <!-- /container -->
</div>
<!-- /bg_color_1 -->



{% endblock main %}

{% block javascripts %}

{% endblock javascripts %}