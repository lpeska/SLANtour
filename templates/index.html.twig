				<a href="hotel-detail.html" class="grid_item">
					<figure>
						<div class="price">
							od {{tour.price}} Kč
						</div>

						{% if tour.priceDiscount > 0 %}
						<div class="price_discount">{{tour.priceOriginal}} Kč</div>
						<div class="price_discount_tag">
							-{{tour.priceDiscount}}%
						</div>

						{% endif %}

						<img src="{{ tour.image }}" class="img-fluid" alt="">
						<div class="info">
							<h3>{{tour.name}}</h3>
							<em>{{tour.nights}} nocí - {{tour.meals}}</em>
						</div>
						<div class="info-right">
							<em>{{tour.destination}}</em>
						</div>
					</figure>
				</a>
